@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = @Model;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Movie</h2>


@using (Html.BeginForm("Save", "ListaPeliculas"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.movie.Name)
        @Html.TextBoxFor(m => m.movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.movie.ReleaseDate)
        @Html.TextBoxFor(m => m.movie.ReleaseDate,"{0:yyyy-MM-dd}" , new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.movie.GenreTypeId)
        @Html.DropDownListFor(m => m.movie.GenreTypeId, new SelectList(Model.GenreTypes, "Id", "Name"), "Select Genre Type", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.NumberStock)
        @Html.TextBoxFor(m => m.movie.NumberStock, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.movie.Id);
    <button type="submit" class="btn btn-primary">Save</button>
}