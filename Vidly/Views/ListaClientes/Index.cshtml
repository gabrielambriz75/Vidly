@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>



            <th>Name</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr>
    </thead>



    @foreach (var cliente in Model)
    {
        <tbody>
            <tr>
                <td>@Html.ActionLink(cliente.Name, "Edit", "ListaClientes", new { id = cliente.Id }, null)</td>
                <td>@cliente.MembershipType.Name</td>
                <td>
                    <button data-customer-id="@cliente.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        </tbody>
    }

</table>

@if (!Model.Any())
{
    <h3>No se encontraron clientes</h3>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                var button = $(this);

                bootbox.confirm("Are you sure do you want to delete this customer?", function(result) {
                    if (result) {
                        $.ajax({
                            url: "api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parent("tr").remove();
                            }
                        });
                    }
                });



            });
        });
    </script>

}